<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

<class table="criminal" name="crimeManagementSystem.CriminalRegistration">


<id name="id" >

<generator class="increment"></generator>
</id>
<property name="policestationname"></property>
<property name="crimetype"></property>
<property name="firid"></property>
<property name="dateofcrime"></property>
<property name="fullname"></property>
<property name="nationality"></property>
<property name="gender"></property>
<property name="dateofbirth"></property>
<property name="address"></property>
<property name="occupation"></property>
<property name="jailterm"></property>
<property name="criminalimage"></property>
<property name="mostwanted"></property>
</class>




</hibernate-mapping>