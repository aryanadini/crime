<hibernate-mapping>
<class table="signup" name="crimeManagementSystem.SignUp">


<id name="id" >

<generator class="increment"></generator>
</id>
<property name="fullname"></property>
<property name="email"></property>
<property name="address"></property>
<property name="gender"></property>
<property name="password"></property>
<property name="cpassword"></property>
<property name="pennumber"></property>
<property name="phone"></property>
<property name="selectsecurityquestion"></property>
<property name="answerthesecurityquestions"></property>

</class>






</hibernate-mapping>